FROM balenalib/raspberry-pi-debian:buster
RUN apt update
RUN apt -y full-upgrade
RUN apt -yq install pigpio python-pigpio python3-pigpio
RUN apt -yq install openjdk-11-jdk-headless
EXPOSE 8080/tcp
ENV LOG_LEVEL=debug
ENV TZ=Europe/Berlin
ENV DEMOMODE=false

COPY backend/target/server.jar /app.jar

ENTRYPOINT ["java","-jar","/app.jar"]
