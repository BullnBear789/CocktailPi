FROM balenalib/raspberry-pi-debian:latest
RUN apt update && apt -y full-upgrade && apt -yq install openjdk-11-jdk pigpio python-pigpio python3-pigpio
EXPOSE 8080/tcp
ENV LOG_LEVEL=debug
ENV TZ=Europe/Berlin
ENV DEMOMODE=false

COPY backend/target/server.jar /app.jar

ENTRYPOINT ["java","-jar","/app.jar"]
